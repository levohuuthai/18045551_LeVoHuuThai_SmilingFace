<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="40dp"
        android:text="PLEASE TOUCH ONE"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDo"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgXanh"
        app:layout_constraintStart_toEndOf="@+id/imgXanh"
        app:layout_constraintTop_toTopOf="@+id/imgXanh"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/do1" />

    <ImageView
        android:id="@+id/imgVang"
        android:layout_width="94dp"
        android:layout_height="83dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/vang" />

    <ImageView
        android:id="@+id/imgXanh"
        android:layout_width="98dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imgVang"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/xanh" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="411dp"
        android:layout_height="117dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVang"
        app:srcCompat="@drawable/nen2" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="207dp"
        android:layout_height="45dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/bg_button_signin"
        android:text="FINISH"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9" />
</androidx.constraintlayout.widget.ConstraintLayout>